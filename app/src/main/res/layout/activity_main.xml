<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:textSize="48sp"
        android:maxLength="12"
        android:textColor="@color/black"
        android:text="0"
        android:gravity="right|bottom|center_vertical"
        android:padding="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digitSeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey"
            android:onClick="onDigit"
            android:layout_marginHorizontal="5dp" />
        <Button
            android:id="@+id/digitEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey"
            android:onClick="onDigit"
            android:layout_marginHorizontal="5dp" />
        <Button
            android:id="@+id/digitNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey"
            android:onClick="onDigit"
            android:layout_marginHorizontal="5dp" />
        <Button
            android:id="@+id/digitDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="÷"
            android:textSize="40sp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/grey"
            android:onClick="onOperation"
            android:layout_marginHorizontal="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digitFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey"
            android:onClick="onDigit"
            android:layout_marginHorizontal="5dp" />
        <Button
            android:id="@+id/digitFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey"
            android:onClick="onDigit"
            android:layout_marginHorizontal="5dp" />
        <Button
            android:id="@+id/digitSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey"
            android:onClick="onDigit"
            android:layout_marginHorizontal="5dp" />
        <Button
            android:id="@+id/digitMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="×"
            android:textSize="40sp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/grey"
            android:onClick="onOperation"
            android:layout_marginHorizontal="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digitOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey"
            android:onClick="onDigit"
            android:layout_marginHorizontal="5dp" />
        <Button
            android:id="@+id/digitTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey"
            android:onClick="onDigit"
            android:layout_marginHorizontal="5dp" />
        <Button
            android:id="@+id/digitThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey"
            android:onClick="onDigit"
            android:layout_marginHorizontal="5dp" />
        <Button
            android:id="@+id/digitMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="40sp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/grey"
            android:onClick="onOperation"
            android:layout_marginHorizontal="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/DigitPoint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="40sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey"
            android:onClick="onDecimal"
            android:layout_marginHorizontal="5dp" />
        <Button
            android:id="@+id/digitZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey"
            android:onClick="onDigit"
            android:layout_marginHorizontal="5dp" />
        <Button
            android:id="@+id/digitClean"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="40sp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/grey"
            android:onClick="onClear"
            android:layout_marginHorizontal="5dp" />
        <Button
            android:id="@+id/digitAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="40sp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/grey"
            android:onClick="onOperation"
            android:layout_marginHorizontal="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/erase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="◀"
            android:textSize="40sp"
            android:textColor="@color/orange"
            android:backgroundTint="@color/grey"
            android:onClick="onErase"
            android:layout_marginHorizontal="5dp" />
        <Button
            android:id="@+id/digitEqual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="="
            android:textSize="40sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/orange"
            android:onClick="onEqual"
            android:layout_marginHorizontal="5dp"
            android:paddingEnd="10dp"
            />
    </LinearLayout>

</LinearLayout>